<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".ValentineAssistantActivity">

    <!-- Camera Preview -->
    <TextureView
        android:id="@+id/texture_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Result Text Display - Positioned for INMO AIR2 viewing area -->
    <TextView
        android:id="@+id/result_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:background="#80000000"
        android:padding="16dp"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:maxLines="3"
        android:gravity="center"
        android:text="Press RING OK button to analyze who you're looking at" />

    <!-- Instructions Text - Small, unobtrusive hint -->
    <TextView
        android:id="@+id/instructions_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="#40000000"
        android:padding="8dp"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:text="OK: Analyze â€¢ BACK: Exit" />
</RelativeLayout>